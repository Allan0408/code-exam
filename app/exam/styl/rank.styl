.rank
  position fixed
  width 160px
  top 0
  right 0
  background-color #666
  height 100%
  padding 20px 10px 0 10px 
  color white
  h2
    color yellow
.rank-item
  .name 
    color #ddd
  .email
    font-size 12px
    color #ffff00
  .score
    color orange
    font-family serif

  border-bottom 1px solid #ccc
  margin-bottom 10px
  &:last-child
    border none

